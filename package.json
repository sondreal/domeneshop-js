{
  "name": "@villdyr/domeneshop-js",
  "version": "0.2.0",
  "description": "A zero-dependency TypeScript client for the Domeneshop API â€” manage domains, DNS records, HTTP forwards, and invoices.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc && tsc --module commonjs --outDir dist-cjs --declaration false --sourceMap false --target es2016 --moduleResolution node && mv dist-cjs/index.js dist/index.cjs && rm -rf dist-cjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "domeneshop",
    "domainnameshop",
    "api",
    "dns",
    "domains",
    "ddns",
    "dyndns",
    "forwarding",
    "invoices",
    "norway",
    "norwegian"
  ],
  "author": "Sondre Dyrnes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sondreal/domeneshop-js.git"
  },
  "homepage": "https://github.com/sondreal/domeneshop-js",
  "bugs": {
    "url": "https://github.com/sondreal/domeneshop-js/issues"
  },
  "devDependencies": {
    "@types/node": "^22.13.14",
    "typescript": "^5.8.2",
    "vitest": "^3.0.0"
  }
}
